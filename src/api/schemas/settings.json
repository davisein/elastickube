{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://elasticbox.net/schemas/settings",
  "type": "object",
  "required": [
    "_id"
  ],
  "additionalProperties": false,
  "properties": {
    "_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 36
    },
    "created": {
      "type": "string"
    },
    "deleted": {
      "type": "string"
    },
    "schema": {
      "type": "string",
      "enum": [
        "http://elasticbox.net/schemas/settings"
      ]
    },
    "schema_version": {
      "type": "string"
    },
    "updated": {
      "type": "string"
    },
    "authentication": {
      "type": "object",
      "required": [
        "google_oauth",
        "password"
      ],
      "additionalProperties": false,
      "properties": {
        "google_oauth": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "key": {
              "type": "string"
            },
            "secret": {
              "type": "string"
            },
            "redirect_uri": {
              "type": "string"
            }
          },
          "password": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true
              }
            }
          }
        }
      }
    }
  },
  "type:": "object"
}
