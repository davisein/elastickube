{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://elasticbox.net/schemas/settings",
  "type": "object",
  "required": [
    "_id",
    "metadata",
    "schema"
  ],
  "additionalProperties": false,
  "properties": {
    "_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 36
    },
    "charts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "repo_url": {
          "type": "string"
        }
      }
    },
    "authentication": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "password": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "regex": {
              "type": "string"
            }
          }
        },
        "google_oauth": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "key": {
              "type": "string"
            },
            "redirect_uri": {
              "type": "string"
            },
            "secret": {
              "type": "string"
            }
          }
        }
      }
    },
    "mail": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "server",
        "no_reply_address"
      ],
      "properties": {
        "server": {
          "type": "string"
        },
        "port": {
          "type": "integer",
          "default": 587
        },
        "no_reply_address": {
          "type": "string"
        },
        "ssl": {
          "type": "boolean",
          "default": false
        },
        "authentication": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "username",
            "password"
          ],
          "properties": {
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          }
        }
      }
    },
    "deleted": {
      "type": "string"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "resourceVersion": {
          "type": "number"
        }
      }
    },
    "schema": {
      "type": "string",
      "enum": [
        "http://elasticbox.net/schemas/settings"
      ]
    },
    "schema_version": {
      "type": "int"
    }
  },
  "type:": "object"
}
