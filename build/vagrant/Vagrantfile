# -*- mode: ruby -*-
# vi: set ft=ruby :

EBX_ADDRESS = "elasticbox.com"

TOKEN_FILE = File.join(Dir.home, ".ebx_token_prod")
if File.exist?(TOKEN_FILE)
  TOKEN = File.read(TOKEN_FILE)
else
  print "Enter your ElasticBox Token: "
  TOKEN = STDIN.gets
  File.write(TOKEN_FILE, TOKEN)
end

ARGUMENTS = "-b 'ElasticKube Dev' -n #{ENV['USER']} -H '#{EBX_ADDRESS}' -R #{EBX_ADDRESS} -t #{TOKEN}"

SSH_PUB_KEY = File.read(File.join(Dir.home, ".ssh", "id_rsa.pub"))
PRODUCT_PATH = File.join(Dir.home, "Repositories", "master")

# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  config.vm.box = "elasticbox/ubuntu-14.04"

  # Disable default Vagrant synced folder
  config.vm.synced_folder '.', '/vagrant', disabled: true

  config.vm.network :private_network, ip: "10.5.10.6"
  config.vm.network "public_network", bridge: 'en0: Wi-Fi (AirPort)'

  config.ssh.username = "elasticbox"
  config.ssh.password = "elasticbox"

  config.vm.provider :vmware_fusion do |v|
    v.vmx["memsize"] = "4096"
    v.vmx["numvcpus"] = "8"
  end

  config.vm.provider "virtualbox" do |v|
    v.memory = 4096
    v.cpus = 8
    v.name = "elastickube"
    v.customize ['guestproperty', 'set', :id, '/VirtualBox/GuestAdd/VBoxService/--timesync-set-threshold', '10000']
  end

  config.vbguest.iso_path = "/home/elasticbox/VBoxGuestAdditions.iso"

  # Add the public key to the authorized hosts
  config.vm.provision :shell, inline: "echo '#{SSH_PUB_KEY}' >> /home/elasticbox/.ssh/authorized_keys"

  # Create .ssh folder for elasticbox and root
  config.vm.provision :shell, inline: "mkdir -p /home/elasticbox/.ssh"
  config.vm.provision :shell, inline: "sudo mkdir -p /root/.ssh"

  # Configure ssh for elasticbox and root
  config.vm.provision :file, source: File.join(Dir.home, ".ssh", "config"), destination: "/tmp/config"
  config.vm.provision :shell, inline: "cp /tmp/config /home/elasticbox/.ssh/config"
  config.vm.provision :shell, inline: "sudo mv /tmp/config /root/.ssh/config"

  # Create id_rsa for elasticbox and root
  config.vm.provision :file, source: File.join(Dir.home, ".ssh", "id_rsa"), destination: "/tmp/id_rsa"
  config.vm.provision :shell, inline: "cp /tmp/id_rsa /home/elasticbox/.ssh/id_rsa"
  config.vm.provision :shell, inline: "sudo mv /tmp/id_rsa /root/.ssh/id_rsa"

  # Create id_rsa.pub for elasticbox and root
  config.vm.provision :file, source: File.join(Dir.home, ".ssh", "id_rsa.pub"), destination: "/tmp/id_rsa.pub"
  config.vm.provision :shell, inline: "cp /tmp/id_rsa.pub /home/elasticbox/.ssh/id_rsa.pub"
  config.vm.provision :shell, inline: "sudo mv /tmp/id_rsa.pub /root/.ssh/id_rsa.pub"

  # Configure Rsync daemon
  config.vm.provision :file, source: "rsyncd.conf", destination: "/tmp/rsyncd.conf"
  config.vm.provision :shell, inline: "sudo mv /tmp/rsyncd.conf /etc/rsyncd.conf"

  # Execute custom setup
  config.vm.provision :shell, path: "setup.sh"

  # Do the first code sync the product
  config.vm.provision :host_shell, inline: "cd #{PRODUCT_PATH} && rsync -aHviSh --delete --filter=':- .gitignore' . 10.5.10.6::elastickube_dev/"

  # Install the ElasticBox agent
  config.vm.provision :shell, inline: "curl -skL #{EBX_ADDRESS} | bash -s -- #{ARGUMENTS}"
end
